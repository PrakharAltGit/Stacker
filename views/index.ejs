    </div>
</section>

<script>
    // Handle form submission
    document.getElementById('contactForm').addEventListener('submit', async function(event) {
        event.preventDefault(); // Prevent default form submission

        // Get form data
        const formData = new FormData(event.target);
        const data = {
            name: formData.get('name'),
            email: formData.get('email'),
            company: formData.get('company'),
            message: formData.get('message')
        };

        // Display a loading message while submitting
        const formMessage = document.getElementById('formMessage');
        formMessage.textContent = 'Submitting...';
        formMessage.style.color = 'blue';

        try {
            // Send POST request to the /contact route
            const response = await fetch('/contact', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            });

            const result = await response.json();

            // Handle success or failure message
            if (result.success) {
                formMessage.style.color = 'green';
                formMessage.textContent = result.message; // Success message
                event.target.reset(); // Reset the form fields
            } else {
                formMessage.style.color = 'red';
                formMessage.textContent = result.message; // Error message
            }
        } catch (error) {
            console.error('Error:', error);
            formMessage.style.color = 'red';
            formMessage.textContent = 'There was an error submitting your message. Please try again later.';
        }
    });
</script>


